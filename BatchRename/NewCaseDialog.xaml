<Window x:Class="BatchRename.NewCaseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="NewCaseDialog" Height="250" Width="275">
    <StackPanel Height="195" Width="275" VerticalAlignment="Top" Orientation="Vertical">
        <Label Content="THAY ĐỔI KIỂU CHỮ" FontSize="16" Height="42" Width="155" RenderTransformOrigin="0.332,1.373"/>
        
        <CheckBox Name="cbLowerCase" Content="Tất cả chuyển sang chữ thường"  Margin="20,10,10,10" />
        <CheckBox Name="cbRemoveSpace" Content="Xóa tất cả khoảng trắng ở đầu và cuối" Margin="20,10,10,10"  />
        <CheckBox Name="cbPascalCase" Content="Chuyển về dạng PascalCase" Margin="20,10,10,10"  />
        <Canvas Height="100">
        <Button Content="Cancel" IsCancel="True" Canvas.Left="53" Canvas.Top="20" Width="75" Name="CancelButton" RenderTransformOrigin="0.987,-3.906"/>
        <Button Content="OK" Canvas.Left="148" Canvas.Top="20" Width="75" Name="OkButton" Click="OkButton_Click"/>
        </Canvas>
    </StackPanel>
</Window>
